<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseActivity"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/title2"
        android:layout_gravity="center|center_vertical"

        />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_vertical">


        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="750dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"
            android:layout_marginStart="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/rice"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="21dp"
                    android:background="@drawable/noodles"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="75dp"
                    android:text="飯"
                    style="@style/CustomCheckboxTheme"
                    />

                <CheckBox
                    android:id="@+id/checknoodles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="110dp"
                    android:text="麵"
                    style="@style/CustomCheckboxTheme"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/fire"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/soup"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkfire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="75dp"
                    android:text="火鍋"
                    style="@style/CustomCheckboxTheme"
                    />

                <CheckBox
                    android:id="@+id/checksoup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="95dp"
                    android:text="湯"
                    style="@style/CustomCheckboxTheme"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/sweat"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/bun"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checksweet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="75dp"
                    android:text="甜點"
                    style="@style/CustomCheckboxTheme"
                    />

                <CheckBox
                    android:id="@+id/checkbun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="95dp"
                    android:text="麵包"
                    style="@style/CustomCheckboxTheme"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/OKbtn"
                style="@style/btn_primary"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:text="開始隨機"
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>




</LinearLayout>